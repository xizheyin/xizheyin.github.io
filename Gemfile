source "https://rubygems.org"

gem "jekyll", "~> 4.2.0"
gem "webrick", "~> 1.7"  # Jekyll 4.2.0需要这个依赖
gem "ffi", "~> 1.12.2"  # 指定较旧版本的 ffi，与 RubyGems 3.1.2 兼容

# 如果您使用GitHub Pages，您可能需要这个
# gem "github-pages", group: :jekyll_plugins

# Jekyll插件
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
end 